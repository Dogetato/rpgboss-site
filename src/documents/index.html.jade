// Main hero unit for a primary marketing message or call to action.
.jumbotron
  .row
    .col-md-4
      h1 rpgboss
      p Make your own RPG.
      ul
        li No coding required
        li Side view battle system
        li Multi platform
      p Version #{site.binaryversion}
      p: a.btn.btn-primary(href="/binaries/rpgboss-" + site.binaryversion + ".exe") Download for Windows
      p: a.btn.btn-default(href="/binaries/rpgboss-" + site.binaryversion + ".tar.gz") Download for Linux/Mac
    .col-md-8
      p <iframe width="640" height="380" src="//www.youtube.com/embed/XXlUY7t-deA?rel=0&showinfo=0&modestbranding=1&start=22" frameborder="0" allowfullscreen=""></iframe>

